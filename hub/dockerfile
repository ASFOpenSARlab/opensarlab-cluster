FROM jupyterhub/k8s-hub:0.9.0-beta.4
LABEL MAINTAINER="Alaska Satellite Facility"

# By default, the notebook base image is set to non-sudo user joyvan. This makes root-ful actions difficult.
USER root

ENV DEBIAN_FRONTEND=noninteractive
RUN apt update && \
    apt install --no-install-recommends -y \
    tzdata
RUN ln -fs /usr/share/zoneinfo/America/Alaska /etc/localtime
RUN dpkg-reconfigure --frontend noninteractive tzdata
RUN apt install --no-install-recommends -y \
    python3 \
    python3-pip \
    python3-boto3 \
    cron \
    less \
    vim \
    sudo \
    mailutils

RUN echo "address { email-addr eric@localhost.example; email-domain opensarlab.asf.alaska.edu; };" > /etc/mailutils.conf

RUN pip3 install --upgrade awscli pyyaml python-crontab

COPY static/images/alaska_satellite_facility_1000.png /usr/local/share/jupyterhub/static/images/alaska_satellite_facility_1000.png

COPY templates/groups.html /usr/local/share/jupyterhub/templates/groups.html
COPY lib/groups.py /usr/local/lib/python3.6/dist-packages/jupyterhub/groups.py
COPY lib/handlers/groups.py /usr/local/lib/python3.6/dist-packages/jupyterhub/handlers/groups.py
#COPY lib/handlers/__init__.py /usr/local/lib/python3.6/dist-packages/jupyterhub/handlers/__init__.py

RUN mkdir -p /etc/jupyterhub/custom
COPY volumes/pv.yaml /etc/jupyterhub/custom/pv.yaml
COPY volumes/pvc.yaml /etc/jupyterhub/custom/pvc.yaml
COPY volumes/volume_stopping_tags.py /etc/jupyterhub/custom/volume_stopping_tags.py
COPY volumes/volume_from_snapshot.py /etc/jupyterhub/custom/volume_from_snapshot.py
COPY volumes/delete_volumes.py /etc/jupyterhub/custom/delete_volumes.py
COPY volumes/delete_snapshot.py /etc/jupyterhub/custom/delete_snapshot.py

RUN chown -R 1000:0 /etc/jupyterhub/custom/
ENV PYTHONPATH "${PYTHONPATH}:/etc/jupyterhub/custom/"

RUN echo 'jovyan  ALL=NOPASSWD: /usr/sbin/service cron start' >> /etc/sudoers
#RUN echo 'jovyan ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers

USER jovyan
