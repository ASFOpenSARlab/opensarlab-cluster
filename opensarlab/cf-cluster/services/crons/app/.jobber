version: 1.4

prefs:
  logPath: /home/jobberuser/jobber.log
  runLog:
    type: file
    path: /home/jobberuser/runlog
    maxFileLen: 100m
    maxHistories: 2

jobs:
  DeleteVolumes:
    cmd: |
      echo "\n******** " $(date) >> /home/jobberuser/jobber.log
      python3 /home/jobberuser/delete_volumes.py >> /home/jobberuser/jobber.log
      echo "******** " $(date) "\n" >> /home/jobberuser/jobber.log
    time: 0 0 12 * * *  # 12 UTC, 3am AKST
    onError: Backoff

  DeleteSnapshot:
    cmd: |
      echo "\n******** " $(date) >> /home/jobberuser/jobber.log
      python3 /home/jobberuser/delete_snapshot.py >> /home/jobberuser/jobber.log
      echo "******** " $(date) "\n" >> /home/jobberuser/jobber.log
    time: 0 0 13 * * *  # 13 UTC, 4am AKST
    onError: Backoff
