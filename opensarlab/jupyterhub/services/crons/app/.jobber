---

version: 1.4

prefs:
  logPath: /home/jobberuser/jobber.log
  runLog:
    type: file
    path: /home/jobberuser/runlog
    maxFileLen: 100m
    maxHistories: 2

jobs:
  DeleteVolumes:
    time: 0 0 12 * * *  # 12 UTC, 3am AKST
    cmd: |
      echo "\n\n******** " $(date)
      python3 /home/jobberuser/delete_volumes.py
      echo "******** " $(date) "\n"
    onError: Backoff
    notifyOnSuccess:
      - type: stdout
        data:
          - stdout
          - stderr
    notifyOnFailure:
      - type: stdout
        data:
          - stdout
          - stderr

  DeleteSnapshot:
    time: 0 0 13 * * *  # 13 UTC, 4am AKST
    cmd: |
      echo "\n******** " $(date)
      python3 /home/jobberuser/delete_snapshot.py
      echo "******** " $(date) "\n"
    onError: Backoff
    notifyOnSuccess:
      - type: stdout
        data:
          - stdout
          - stderr
    notifyOnFailure:
      - type: stdout
        data:
          - stdout
          - stderr
